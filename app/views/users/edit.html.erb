<h1> Edit Page </h1>

<%= form_for @user do |user| %>
  <div> <%= user.text_field :name, placeholder: 'Name' %> </div>
  <div class=""> <%= user.telephone_field :phone_number, placeholder: '(000) 000-0000'%></div>
  <div> <%= user.text_area :email %> </div>
  <%= user.submit 'Update' %>
<% end %>

<br>
<hr>
<%= link_to "Delete Account", user_path, method: :delete %>
